# =====================================================
# VARIABLES DE ENTORNO PARA RAILWAY
# =====================================================
# Copia estas variables en Railway → tu servicio → Variables
# =====================================================

# ==================== APLICACIÓN ====================
APP_NAME=Sistema Académico Backend
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app.up.railway.app
# ⚠️ Genera con: php artisan key:generate --show
APP_KEY=base64:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ==================== LOCALIZACIÓN ====================
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

# ==================== LOGS ====================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# ==================== BASE DE DATOS ====================
# ✅ Railway crea automáticamente estas variables al agregar PostgreSQL
# NO necesitas configurarlas manualmente, solo verifica que existan:
# - PGHOST
# - PGPORT  
# - PGDATABASE
# - PGUSER
# - PGPASSWORD

DB_CONNECTION=pgsql
# Las siguientes variables se mapean automáticamente desde Railway:
# DB_HOST=${PGHOST}
# DB_PORT=${PGPORT}
# DB_DATABASE=${PGDATABASE}
# DB_USERNAME=${PGUSER}
# DB_PASSWORD=${PGPASSWORD}

# ==================== SESIÓN ====================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.railway.app
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ==================== CACHÉ ====================
CACHE_STORE=database
CACHE_PREFIX=

# ==================== QUEUE (COLA) ====================
QUEUE_CONNECTION=database

# ==================== SANCTUM (API AUTH) ====================
# ⚠️ Actualiza con tu dominio de frontend si tienes uno
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,your-frontend.railway.app
SESSION_DOMAIN=.railway.app

# ==================== CORS ====================
# Si tienes frontend, agrega su dominio aquí
# Laravel usará config/cors.php para CORS

# ==================== MAIL (OPCIONAL) ====================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@sistema-academico.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==================== FILESYSTEM ====================
FILESYSTEM_DISK=local

# ==================== BROADCAST ====================
BROADCAST_CONNECTION=log

# ==================== OTROS ====================
BCRYPT_ROUNDS=12

# =====================================================
# NOTAS IMPORTANTES:
# =====================================================
# 1. Railway detecta automáticamente PHP y Laravel
# 2. PostgreSQL se agrega como servicio separado
# 3. Las variables PG* se crean automáticamente
# 4. Genera APP_KEY con: php artisan key:generate --show
# 5. Actualiza APP_URL con tu dominio de Railway
# 6. Actualiza SANCTUM_STATEFUL_DOMAINS si tienes frontend
# =====================================================
